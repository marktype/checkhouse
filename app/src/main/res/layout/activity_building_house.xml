<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/message_bg"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/theme_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_img"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01栋"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="1单元"
            android:gravity="center"
            android:id="@+id/unit_txt"
            android:paddingRight="@dimen/margin_10dp"
            android:drawablePadding="@dimen/margin_5dp"
            android:drawableRight="@mipmap/down_img"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/loupan_Lin"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待检验"
            android:drawableLeft="@drawable/circle_tint_gray_min_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待指派"
            android:textColor="@color/gray_red"
            android:drawableLeft="@drawable/circle_gray_red_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待修复"
            android:textColor="@color/gray_green"
            android:drawableLeft="@drawable/circle_gray_green_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待销项"
            android:textColor="@color/gray_yellow"
            android:drawableLeft="@drawable/circle_gray_yellow_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/yuyanfang_Lin"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/theme_color"
            android:text="当前允许预验房"
            android:drawableLeft="@drawable/circle_tint_blue_min_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当前不允许预验房"
            android:drawableLeft="@drawable/circle_tint_gray_min_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/jiaofupeiyan_Lin"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/theme_color"
            android:text="已完成交付"
            android:drawableLeft="@drawable/circle_tint_blue_min_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待完成交付"
            android:drawableLeft="@drawable/circle_tint_gray_min_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_houses"></ListView>



</LinearLayout>
