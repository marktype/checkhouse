<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/word_record_title"
        android:background="@color/theme_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_img"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增工作记录"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/word_record_title"
        android:layout_above="@+id/sure_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增类型"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="房屋整改"
            android:gravity="end"
            android:drawablePadding="@dimen/margin_10dp"
            android:drawableRight="@mipmap/right"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_15dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"/>
            <EditText
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="***公司"
                android:textSize="@dimen/content_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_15dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"/>
        <EditText
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/margin_10dp"
           android:hint="请输入工作内容"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="start"
            android:textSize="@dimen/content_text_size"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_15dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="备注"/>
        <EditText
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/margin_10dp"
            android:hint="如有备注，请输入"
            android:textSize="@dimen/content_text_size"
            android:textColorHint="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/sure_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/theme_color"/>
</RelativeLayout>
