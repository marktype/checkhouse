<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/message_bg"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title_relat"
        android:layout_width="match_parent"
        android:background="@color/theme_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_img"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-检测墙面"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/title_relat"
        android:id="@+id/status_relat"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/zhuangtai_txt"
            android:padding="@dimen/margin_15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/status_selector"/>
        <ImageView
            android:id="@+id/buwei_txt"
            android:padding="@dimen/margin_15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/buwei_selector"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_lin"
        android:layout_below="@id/status_relat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待检验"
            android:drawableLeft="@drawable/circle_tint_gray_min_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="待整改"
            android:textColor="@color/gray_red"
            android:drawableLeft="@drawable/circle_gray_red_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已整改"
            android:textColor="@color/gray_green"
            android:drawableLeft="@drawable/circle_gray_green_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已通过"
            android:textColor="@color/gray_yellow"
            android:drawableLeft="@drawable/circle_gray_yellow_shape"
            android:padding="@dimen/margin_10dp"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:layout_below="@id/status_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_houses"></ListView>
    <ImageView
        android:id="@+id/bg_txt"
        android:layout_below="@id/status_relat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:visibility="gone"
        android:background="@android:color/darker_gray"
        />
</RelativeLayout>
