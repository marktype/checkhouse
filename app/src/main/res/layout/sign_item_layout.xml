<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/11"
        android:padding="@dimen/margin_10dp"
        android:id="@+id/time_num"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/week_txt"
        android:layout_toRightOf="@+id/time_num"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:padding="@dimen/margin_10dp"
        android:text="星期四"/>
    <TextView
        android:id="@+id/status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/margin_10dp"
        android:textColor="@color/theme_color"
        android:text="正常"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/line_sign"
        android:layout_below="@+id/time_num"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_below="@+id/line_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9:00"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="18:00"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sign_right"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/start_sign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="建设路（上班签到）"/>
            <TextView
                android:id="@+id/end_sign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="建设路（下班签到）"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
