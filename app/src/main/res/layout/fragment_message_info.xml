<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:text="消息"
        android:background="@color/theme_color"
        android:textColor="@android:color/white"
        android:gravity="center"
        />
    <RelativeLayout
        android:id="@+id/tool_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:id="@+id/tool_img"
            android:layout_centerVertical="true"
            android:src="@mipmap/tool"/>
        <TextView
            android:text="工程消息"
            android:id="@+id/tool_txt"
            android:layout_toRightOf="@+id/tool_img"
            android:layout_marginTop="@dimen/margin_10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/margin_10dp"
            android:text="2016-11-23"/>
        <TextView
            android:id="@+id/tool_info"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_60dp"
            android:layout_below="@+id/tool_txt"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/tool_img"
            android:text="保利花园1期1栋3单元2704已由XXX工程施工x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/platform_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:id="@+id/platform_img"
            android:layout_centerVertical="true"
            android:src="@mipmap/platform"/>
        <TextView
            android:text="平台消息"
            android:id="@+id/platform_txt"
            android:layout_toRightOf="@+id/platform_img"
            android:layout_marginTop="@dimen/margin_10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/margin_10dp"
            android:text="2016-11-23"/>
        <TextView
            android:id="@+id/platform_info"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_60dp"
            android:layout_below="@+id/platform_txt"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/platform_img"
            android:text="保利花园1期1栋3单元2704已由XXX工程施工x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/develop_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:id="@+id/develop_img"
            android:layout_centerVertical="true"
            android:src="@mipmap/develop"/>
        <TextView
            android:text="开发商消息"
            android:id="@+id/develop_txt"
            android:layout_toRightOf="@+id/develop_img"
            android:layout_marginTop="@dimen/margin_10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/margin_10dp"
            android:text="2016-11-23"/>
        <TextView
            android:id="@+id/develop_info"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_60dp"
            android:layout_below="@+id/develop_txt"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/develop_img"
            android:text="保利花园1期1栋3单元2704已由XXX工程施工x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ListView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/no_info"/>

</LinearLayout>
