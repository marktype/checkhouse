<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/message_bg"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/theme_color"
        android:layout_height="@dimen/title_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_img"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            />
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楼盘"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入关键词"
            android:drawablePadding="@dimen/margin_10dp"
            android:drawableLeft="@mipmap/sousuo"
            android:textColorHint="@android:color/darker_gray"
            android:layout_margin="@dimen/margin_10dp"
            android:padding="@dimen/margin_10dp"
            android:textSize="@dimen/content_min_text_size"
            android:background="@drawable/rect_circle_gray_shape"/>
    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:id="@+id/loupan_grid"
        android:padding="@dimen/margin_10dp"
        android:horizontalSpacing="@dimen/margin_10dp"
        android:verticalSpacing="@dimen/margin_10dp"
        android:background="@android:color/white"/>

</LinearLayout>
